@using NexusEMS.Shared.Models

<div class="card h-100 shadow-sm border-start border-4 border-primary">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <h5 class="card-title fw-bold text-primary mb-0">@Department?.Name</h5>
            <i class="bi bi-building fs-4 text-muted"></i>
        </div>

        <p class="card-text text-muted small">@Department?.Description</p>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Employees</small>
                <div class="fs-5 fw-bold">@Department?.Employees?.Count</div>
            </div>

            @if (OnViewClick.HasDelegate)
            {
                <button class="btn btn-sm btn-outline-primary" @onclick="() => OnViewClick.InvokeAsync(Department)">
                    Manage
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public Department Department { get; set; }
    [Parameter] public EventCallback<Department> OnViewClick { get; set; }
}
