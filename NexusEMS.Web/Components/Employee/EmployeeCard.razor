@using NexusEMS.Shared.Models

<div class="card h-100 shadow-sm border-0">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <span class="fs-4 fw-bold">@GetInitials(Employee?.FirstName, Employee?.LastName)</span>
            </div>
            <div>
                <h6 class="card-title mb-0 fw-bold">@Employee?.FirstName @Employee?.LastName</h6>
                <small class="text-muted">@Employee?.Position</small>
            </div>
        </div>
        
        <div class="mb-2">
            <i class="bi bi-envelope text-muted me-2"></i> <span class="small">@Employee?.Email</span>
        </div>
        <div class="mb-2">
             <i class="bi bi-building text-muted me-2"></i> <span class="small">@Employee?.Department?.Name</span>
        </div>
        <div class="mt-3 d-flex justify-content-between align-items-center">
            <span class="badge @(Employee.IsActive ? "bg-success" : "bg-danger")">
                @(Employee.IsActive ? "Active" : "Inactive")
            </span>
             @if (OnViewClick.HasDelegate)
            {
                <button class="btn btn-sm btn-outline-primary" @onclick="() => OnViewClick.InvokeAsync(Employee)">
                     View Details
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public Employee Employee { get; set; }
    [Parameter] public EventCallback<Employee> OnViewClick { get; set; }

    private string GetInitials(string first, string last)
    {
        return $"{(first?.FirstOrDefault())}{(last?.FirstOrDefault())}";
    }
}
