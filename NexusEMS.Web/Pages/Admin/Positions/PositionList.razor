@page "/admin/positions"
@using NexusEMS.Shared.Models
@inject TestDataService TestData
@inject NavigationManager Navigation

<div class="mb-6">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-1">Position Management</h1>
            <p class="text-muted mb-0">Manage job positions, titles, and salary ranges</p>
        </div>
        <button class="btn btn-primary" @onclick="CreatePosition">
            <i class="bi bi-plus-circle me-2"></i>Create Position
        </button>
    </div>
</div>

<div class="card border-0">
    <div class="card-header position-list-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">All Positions (@Positions.Count)</h5>
            <div class="input-group position-search-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search positions..." 
                       @bind="SearchTerm" @bind:event="oninput" />
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (FilteredPositions.Any())
        {
            <SfGrid DataSource="@FilteredPositions" 
                    AllowPaging="true" 
                    AllowSorting="true"
                    AllowFiltering="false">
                <GridPageSettings PageSize="10"></GridPageSettings>
                <GridColumns>
                    <GridColumn Field="@nameof(Position.Title)" HeaderText="Position Title" Width="200"></GridColumn>
                    <GridColumn Field="@nameof(Position.Description)" HeaderText="Description" Width="300"></GridColumn>
                    <GridColumn Field="@nameof(Position.BaseSalary)" HeaderText="Base Salary" Format="C0" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(Position.SalaryRangeMin)" HeaderText="Min Salary" Format="C0" Width="150"></GridColumn>
                    <GridColumn Field="@nameof(Position.SalaryRangeMax)" HeaderText="Max Salary" Format="C0" Width="150"></GridColumn>
                    <GridColumn HeaderText="Actions" Width="120">
                        <Template>
                            @{
                                var position = (context as Position)!;
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditPosition(position.Id)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePosition(position)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            }
                        </Template>
                    </GridColumn>
                </GridColumns>
            </SfGrid>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-briefcase position-empty-icon"></i>
                <h5 class="mt-3 mb-2">No positions found</h5>
                <p class="text-muted">@(string.IsNullOrEmpty(SearchTerm) ? "Start by creating your first position" : "No positions match your search")</p>
                @if (string.IsNullOrEmpty(SearchTerm))
                {
                    <button class="btn btn-primary mt-2" @onclick="CreatePosition">
                        <i class="bi bi-plus-circle me-2"></i>Create Position
                    </button>
                }
            </div>
        }
    </div>
</div>

<ConfirmationDialog @ref="DeleteConfirmation" Title="Delete Position"
                    Message="@($"Are you sure you want to delete {PositionToDelete?.Title}?")" 
                    OnConfirmation="OnDeleteConfirmed" />

@code {
    private List<Position> Positions = new();
    private string SearchTerm = string.Empty;
    private ConfirmationDialog DeleteConfirmation = new();
    private Position? PositionToDelete;

    private List<Position> FilteredPositions => string.IsNullOrWhiteSpace(SearchTerm)
        ? Positions
        : Positions.Where(p =>
            p.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            (p.Description?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
        ).ToList();

    protected override void OnInitialized()
    {
        Positions = TestData.GetPositions();
    }

    private void CreatePosition() => Navigation.NavigateTo("/admin/positions/create");
    private void EditPosition(Guid id) => Navigation.NavigateTo($"/admin/positions/edit/{id}");

    private void DeletePosition(Position position)
    {
        PositionToDelete = position;
        DeleteConfirmation.Show();
    }

    private void OnDeleteConfirmed(bool confirmed)
    {
        if (confirmed && PositionToDelete != null)
        {
            Positions.Remove(PositionToDelete);
            PositionToDelete = null;
            StateHasChanged();
        }
    }
}
