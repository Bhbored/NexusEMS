@page "/admin/work-schedules"
@using NexusEMS.Shared.Models
@using NexusEMS.Shared.Enums
@inject TestDataService TestData
@inject NavigationManager Navigation

<div class="mb-6">
    <div>
        <h1 class="h2 fw-bold mb-1">Work Schedules</h1>
        <p class="text-muted mb-0">Monitor department schedules and approvals</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card schedule-stat-card">
            <div class="card-body">
                <div class="schedule-stat-icon schedule-stat-icon-primary mb-3">
                    <i class="bi bi-calendar3"></i>
                </div>
                <div class="schedule-stat-value">@Schedules.Count</div>
                <div class="schedule-stat-label">Total Schedules</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card schedule-stat-card">
            <div class="card-body">
                <div class="schedule-stat-icon schedule-stat-icon-warning mb-3">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="schedule-stat-value">@PendingApproval</div>
                <div class="schedule-stat-label">Pending Approval</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card schedule-stat-card">
            <div class="card-body">
                <div class="schedule-stat-icon schedule-stat-icon-success mb-3">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="schedule-stat-value">@Approved</div>
                <div class="schedule-stat-label">Approved</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card schedule-stat-card">
            <div class="card-body">
                <div class="schedule-stat-icon schedule-stat-icon-info mb-3">
                    <i class="bi bi-broadcast"></i>
                </div>
                <div class="schedule-stat-value">@Published</div>
                <div class="schedule-stat-label">Published</div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0">
    <div class="card-header schedule-list-header">
        <div class="row g-3">
            <div class="col-md-5">
                <div class="input-group schedule-search-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search schedules..." 
                           @bind="SearchTerm" @bind:event="oninput" />
                </div>
            </div>
            <div class="col-md-3">
                <SfDropDownList TValue="string" TItem="StatusFilterItem"
                              @bind-Value="StatusFilter"
                              DataSource="@StatusFilterOptions"
                              Placeholder="Filter by status"
                              CssClass="e-custom-dropdown">
                    <DropDownListFieldSettings Value="Value" Text="Text"></DropDownListFieldSettings>
                </SfDropDownList>
            </div>
            <div class="col-md-2">
                <SfDropDownList TValue="Guid?" TItem="BranchFilterItem"
                              @bind-Value="BranchFilter"
                              DataSource="@BranchFilterOptions"
                              Placeholder="Branch"
                              CssClass="e-custom-dropdown">
                    <DropDownListFieldSettings Value="Id" Text="Name"></DropDownListFieldSettings>
                </SfDropDownList>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                    <i class="bi bi-x-circle me-2"></i>Clear
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (FilteredSchedules.Any())
        {
            <SfGrid DataSource="@FilteredSchedules" 
                    AllowPaging="true" 
                    AllowSorting="true">
                <GridPageSettings PageSize="15"></GridPageSettings>
                <GridColumns>
                    <GridColumn Field="@nameof(WorkSchedule.Title)" HeaderText="Title" Width="200"></GridColumn>
                    <GridColumn HeaderText="Department" Width="180">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                var dept = Departments.FirstOrDefault(d => d.Id == schedule.DepartmentId);
                                <span>@dept?.Name</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Period" Width="180">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                <div class="small">
                                    @schedule.PeriodStart.ToString("MMM dd") - @schedule.PeriodEnd.ToString("MMM dd, yyyy")
                                </div>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Status" Width="120">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                var badgeClass = schedule.Status switch
                                {
                                    WorkScheduleStatus.Draft => "bg-secondary",
                                    WorkScheduleStatus.Submitted => "bg-warning",
                                    WorkScheduleStatus.Approved => "bg-success",
                                    WorkScheduleStatus.Rejected => "bg-danger",
                                    WorkScheduleStatus.Published => "bg-info",
                                    _ => "bg-secondary"
                                };
                                <span class="badge @badgeClass">@schedule.Status</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Created By" Width="150">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                var creator = Users.FirstOrDefault(u => u.Id == schedule.CreatedByUserId);
                                <span>@creator?.Username</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Assignments" Width="100">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                <span class="badge bg-primary">@schedule.Assignments.Count</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Actions" Width="100">
                        <Template>
                            @{
                                var schedule = (context as WorkSchedule)!;
                                <button class="btn btn-sm btn-primary" @onclick="() => ViewDetails(schedule.Id)">
                                    <i class="bi bi-eye me-1"></i>View
                                </button>
                            }
                        </Template>
                    </GridColumn>
                </GridColumns>
            </SfGrid>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar2-week schedule-empty-icon"></i>
                <h5 class="mt-3 mb-2">No work schedules found</h5>
                <p class="text-muted">Department Chiefs create and submit schedules for approval</p>
            </div>
        }
    </div>
</div>

@code {
    private List<WorkSchedule> Schedules = new();
    private List<Department> Departments = new();
    private List<Branch> Branches = new();
    private List<User> Users = new();
    private string SearchTerm = string.Empty;
    private string StatusFilter = "All";
    private Guid? BranchFilter;

    private List<WorkSchedule> FilteredSchedules
    {
        get
        {
            var query = Schedules.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(s =>
                    s.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (s.Description?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
                );
            }

            if (StatusFilter != "All")
            {
                var status = Enum.Parse<WorkScheduleStatus>(StatusFilter);
                query = query.Where(s => s.Status == status);
            }

            if (BranchFilter.HasValue)
            {
                var deptIds = Departments.Where(d => d.BranchId == BranchFilter.Value).Select(d => d.Id);
                query = query.Where(s => deptIds.Contains(s.DepartmentId));
            }

            return query.OrderByDescending(s => s.CreatedAt).ToList();
        }
    }

    private int PendingApproval => Schedules.Count(s => s.Status == WorkScheduleStatus.Submitted);
    private int Approved => Schedules.Count(s => s.Status == WorkScheduleStatus.Approved);
    private int Published => Schedules.Count(s => s.Status == WorkScheduleStatus.Published);

    private List<StatusFilterItem> StatusFilterOptions = new()
    {
        new StatusFilterItem { Value = "All", Text = "All Statuses" },
        new StatusFilterItem { Value = nameof(WorkScheduleStatus.Draft), Text = "Draft" },
        new StatusFilterItem { Value = nameof(WorkScheduleStatus.Submitted), Text = "Submitted" },
        new StatusFilterItem { Value = nameof(WorkScheduleStatus.Approved), Text = "Approved" },
        new StatusFilterItem { Value = nameof(WorkScheduleStatus.Rejected), Text = "Rejected" },
        new StatusFilterItem { Value = nameof(WorkScheduleStatus.Published), Text = "Published" }
    };

    private List<BranchFilterItem> BranchFilterOptions = new();

    protected override void OnInitialized()
    {
        Schedules = TestData.GetWorkSchedules();
        Departments = TestData.GetDepartments();
        Branches = TestData.GetBranches();
        Users = TestData.GetUsers();

        BranchFilterOptions = new List<BranchFilterItem> { new BranchFilterItem { Id = null, Name = "All Branches" } };
        BranchFilterOptions.AddRange(Branches.Select(b => new BranchFilterItem { Id = b.Id, Name = b.Name }));
    }

    private void ViewDetails(Guid id) => Navigation.NavigateTo($"/admin/work-schedules/{id}");

    private void ClearFilters()
    {
        SearchTerm = string.Empty;
        StatusFilter = "All";
        BranchFilter = null;
    }

    private class StatusFilterItem
    {
        public string Value { get; set; } = string.Empty;
        public string Text { get; set; } = string.Empty;
    }

    private class BranchFilterItem
    {
        public Guid? Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }
}
