@page "/admin/users"
@using NexusEMS.Shared.Models
@using NexusEMS.Shared.Enums
@inject TestDataService TestData
@inject NavigationManager Navigation

<div class="mb-6">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-1">User Management</h1>
            <p class="text-muted mb-0">Manage user accounts, roles, and access permissions</p>
        </div>
        <button class="btn btn-primary" @onclick="CreateUser">
            <i class="bi bi-plus-circle me-2"></i>Create User
        </button>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card user-stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="user-stat-icon user-stat-icon-primary me-3">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <div>
                        <div class="user-stat-label">Total Users</div>
                        <div class="user-stat-value">@Users.Count</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card user-stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="user-stat-icon user-stat-icon-success me-3">
                        <i class="bi bi-circle-fill"></i>
                    </div>
                    <div>
                        <div class="user-stat-label">Online Now</div>
                        <div class="user-stat-value">@OnlineUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card user-stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="user-stat-icon user-stat-icon-info me-3">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <div>
                        <div class="user-stat-label">Admins</div>
                        <div class="user-stat-value">@AdminCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card user-stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="user-stat-icon user-stat-icon-warning me-3">
                        <i class="bi bi-people"></i>
                    </div>
                    <div>
                        <div class="user-stat-label">Managers</div>
                        <div class="user-stat-value">@ManagerCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 user-main-card">
    <div class="card-header user-list-header">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="input-group user-search-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search users..." 
                           @bind="SearchTerm" @bind:event="oninput" />
                </div>
            </div>
            <div class="col-md-3">
                <SfDropDownList TValue="string" TItem="RoleFilterItem"
                              @bind-Value="RoleFilter"
                              DataSource="@RoleFilterOptions"
                              Placeholder="Filter by role"
                              CssClass="e-custom-dropdown">
                    <DropDownListFieldSettings Value="Value" Text="Text"></DropDownListFieldSettings>
                </SfDropDownList>
            </div>
            <div class="col-md-3">
                <SfDropDownList TValue="Guid?" TItem="BranchFilterItem"
                              @bind-Value="BranchFilter"
                              DataSource="@BranchFilterOptions"
                              Placeholder="Filter by branch"
                              CssClass="e-custom-dropdown">
                    <DropDownListFieldSettings Value="Id" Text="Name"></DropDownListFieldSettings>
                </SfDropDownList>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                    <i class="bi bi-x-circle me-2"></i>Clear
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @if (FilteredUsers.Any())
        {
            <div class="row g-4">
                @foreach (var user in FilteredUsers)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <UserCard User="@user"
                                  BranchName="@GetBranchName(user.BranchId)"
                                  DepartmentName="@GetDepartmentName(user.DepartmentId)"
                                  OnView="@((id) => ViewDetails(id))"
                                  OnEdit="@((id) => EditUser(id))" />
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-x user-empty-icon"></i>
                <h5 class="mt-3 mb-2">No users found</h5>
                <p class="text-muted">
                    @if (string.IsNullOrEmpty(SearchTerm) && RoleFilter == "All" && BranchFilter == null)
                    {
                        <span>Start by creating your first user</span>
                    }
                    else
                    {
                        <span>No users match your filters</span>
                    }
                </p>
                @if (string.IsNullOrEmpty(SearchTerm) && RoleFilter == "All" && BranchFilter == null)
                {
                    <button class="btn btn-primary mt-2" @onclick="CreateUser">
                        <i class="bi bi-plus-circle me-2"></i>Create User
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-secondary mt-2" @onclick="ClearFilters">
                        <i class="bi bi-x-circle me-2"></i>Clear Filters
                    </button>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<User> Users = new();
    private List<Branch> Branches = new();
    private List<Department> Departments = new();
    private string SearchTerm = string.Empty;
    private string RoleFilter = "All";
    private Guid? BranchFilter;

    private List<User> FilteredUsers
    {
        get
        {
            var query = Users.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(u =>
                    u.Username.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    u.Email.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)
                );
            }

            if (RoleFilter != "All")
            {
                query = query.Where(u => u.Role.ToString() == RoleFilter || u.SecondaryRole?.ToString() == RoleFilter);
            }

            if (BranchFilter.HasValue)
            {
                query = query.Where(u => u.BranchId == BranchFilter.Value);
            }

            return query.ToList();
        }
    }

    private int OnlineUsers => Users.Count(u => u.IsOnline);
    private int AdminCount => Users.Count(u => u.Role == UserRole.Admin);
    private int ManagerCount => Users.Count(u => u.Role == UserRole.BranchManager);

    private List<RoleFilterItem> RoleFilterOptions = new()
    {
        new RoleFilterItem { Value = "All", Text = "All Roles" },
        new RoleFilterItem { Value = "Admin", Text = "Admin" },
        new RoleFilterItem { Value = "BranchManager", Text = "Branch Manager" },
        new RoleFilterItem { Value = "DepartmentChief", Text = "Department Chief" },
        new RoleFilterItem { Value = "HumanResources", Text = "Human Resources" },
        new RoleFilterItem { Value = "Accounting", Text = "Accounting" },
        new RoleFilterItem { Value = "Employee", Text = "Employee" }
    };

    private List<BranchFilterItem> BranchFilterOptions = new();

    protected override void OnInitialized()
    {
        Users = TestData.GetUsers();
        Branches = TestData.GetBranches();
        Departments = TestData.GetDepartments();

        BranchFilterOptions = new List<BranchFilterItem> { new BranchFilterItem { Id = null, Name = "All Branches" } };
        BranchFilterOptions.AddRange(Branches.Select(b => new BranchFilterItem { Id = b.Id, Name = b.Name }));
    }

    private string? GetBranchName(Guid? branchId) =>
        branchId.HasValue ? Branches.FirstOrDefault(b => b.Id == branchId.Value)?.Name : null;

    private string? GetDepartmentName(Guid? departmentId) =>
        departmentId.HasValue ? Departments.FirstOrDefault(d => d.Id == departmentId.Value)?.Name : null;

    private void CreateUser() => Navigation.NavigateTo("/admin/users/create");
    private void ViewDetails(Guid id) => Navigation.NavigateTo($"/admin/users/{id}");
    private void EditUser(Guid id) => Navigation.NavigateTo($"/admin/users/edit/{id}");

    private void ClearFilters()
    {
        SearchTerm = string.Empty;
        RoleFilter = "All";
        BranchFilter = null;
    }

    private class RoleFilterItem
    {
        public string Value { get; set; } = string.Empty;
        public string Text { get; set; } = string.Empty;
    }

    private class BranchFilterItem
    {
        public Guid? Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }
}
