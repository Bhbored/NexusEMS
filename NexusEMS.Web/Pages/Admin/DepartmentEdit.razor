@page "/admin/departments/edit/{Id:int}"
@using NexusEMS.Shared.Models
@using System.ComponentModel.DataAnnotations
@inject TestDataService TestData
@inject NavigationManager Navigation

<div class="mb-6">
    <h1 class="h2 fw-bold mb-1">Edit Department</h1>
    <p class="text-muted mb-0">Update the department information below.</p>
</div>

    @if (Department == null)
    {
        <div class="d-flex justify-content-center">
             <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        <div class="card department-form-card border-0 shadow-sm">
            <div class="card-body p-5">
                <EditForm Model="@Department" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label for="name" class="form-label">Department Name <span class="text-danger">*</span></label>
                            <InputText id="name" class="form-control" @bind-Value="Department.Name" />
                            <ValidationMessage For="@(() => Department.Name)" />
                        </div>

                        <div class="col-md-12">
                            <label for="description" class="form-label">Description</label>
                            <InputTextArea id="description" class="form-control" @bind-Value="Department.Description" rows="3" />
                            <ValidationMessage For="@(() => Department.Description)" />
                        </div>

                        <div class="col-md-6">
                            <label for="head" class="form-label">Head of Department</label>
                             <InputSelect id="head" class="form-select text-dark" @bind-Value="Department.ChiefUserId">
                                <option value="">Select Chief...</option>
                                @foreach (var emp in EligibleChiefs)
                                {
                                    <option value="@emp.Id">@emp.FirstName @emp.LastName</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-md-6">
                            <label for="budget" class="form-label">Budget</label>
                            <InputNumber id="budget" class="form-control" @bind-Value="Department.Budget" />
                        </div>

                         <div class="col-12 mt-5 d-flex justify-content-end gap-3">
                             <button type="button" class="btn btn-outline-secondary department-form-btn" @onclick="GoBack">Cancel</button>
                             <button type="submit" class="btn btn-primary department-form-btn">Save Changes</button>
                         </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }

@code {
    [Parameter] public Guid Id { get; set; }
    private Department? Department;
    private List<Employee> EligibleChiefs = new();

    protected override void OnInitialized()
    {
        // Get eligible chiefs from mock employees
        var employees = TestData.GetEmployees();
        var currentChiefId = Department?.ChiefUserId;
        EligibleChiefs = employees.Where(x=>x.Id != currentChiefId).ToList();

        // Load department from mock data
        var departments = TestData.GetDepartments();
        Department = departments.FirstOrDefault(d => d.Id == Id);
        
        if (Department == null)
        {
            Department = new Department 
            { 
                Id = Id, 
                Name = "Engineering", 
                Description = "Mock Description", 
                Budget = 500000, 
            };
        }
    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("Department saved!");
        Navigation.NavigateTo("/admin/departments");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin/departments");
    }
}
