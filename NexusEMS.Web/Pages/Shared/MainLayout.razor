@inherits LayoutComponentBase
@implements IDisposable
@using NexusEMS.Web.Services
@inject IJSRuntime JSRuntime
@inject AppStateService AppState
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (AppState == null || !AppState.IsAuthenticated)
{
    <RedirectToLogin />
}
else
{
    <div class="d-flex" style="height: 100vh; overflow: hidden;">
        <!-- Desktop Sidebar -->
        <div class="sidebar d-none d-md-flex flex-column p-3">
            <a href="@GetDashboardUrl()" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
                <span class="fs-4 fw-bold text-primary">Nexus EMS</span>
            </a>
            <hr class="text-secondary">

            <NavMenu />

            <hr class="mt-auto text-secondary">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-secondary"
                    id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-5 me-2"></i>
                    <strong>@AppState.CurrentUser?.Username</strong>
                </a>
                <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item" href="#" @onclick="HandleLogout">Sign out</a></li>
                </ul>
            </div>
        </div>

        <!-- Mobile Offcanvas Navigation -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileNav" aria-labelledby="mobileNavLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title fw-bold text-primary" id="mobileNavLabel">Nexus EMS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <NavMenu />
                <hr class="text-secondary mx-3">
                <div class="px-3 pb-3">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-secondary"
                            id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5 me-2"></i>
                            <strong>@AppState.CurrentUser?.Username</strong>
                        </a>
                        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#" @onclick="HandleLogout">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column" style="overflow: hidden;">
            <header class="sticky-top p-3 border-bottom d-flex align-items-center justify-content-between bg-body">
                <div class="d-flex align-items-center gap-3">
                    <!-- Mobile Menu Button -->
                    <button class="btn btn-link d-md-none p-2 text-muted" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#mobileNav" aria-controls="mobileNav">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <h5 class="m-0 text-muted">@GetPageTitle()</h5>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-outline-secondary d-flex align-items-center gap-2" @onclick="ToggleTheme">
                        @if (isDarkMode)
                        {
                            <i class="bi bi-sun-fill text-warning"></i> <span class="d-none d-sm-inline">Light</span>
                        }
                        else
                        {
                            <i class="bi bi-moon-stars-fill text-primary"></i> <span class="d-none d-sm-inline">Dark</span>
                        }
                    </button>
                </div>
            </header>

            <main class="flex-grow-1 bg-body-tertiary overflow-auto p-4 p-md-4">
                <div class="container-fluid px-0 px-md-3">
                    @Body
                </div>
            </main>
        </div>
    </div>
}

@code {
    private bool isDarkMode = false;

    protected override void OnInitialized()
    {
        if (AppState != null)
        {
            AppState.OnUserChanged += StateHasChanged;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && AppState.IsAuthenticated)
        {
            isDarkMode = false;
        }
    }

    private async Task ToggleTheme()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("toggleTheme");
            isDarkMode = !isDarkMode;
        }
        catch
        {
            isDarkMode = !isDarkMode;
        }
    }

    private void HandleLogout()
    {
        AuthService.Logout();
        AppState.CurrentUser = null;
        Navigation.NavigateTo("/login");
    }

    private string GetDashboardUrl()
    {
        if (AppState?.IsAdmin == true)
            return "/admin/dashboard";
        else if (AppState?.IsDepartmentChief == true)
            return "/chief/dashboard";
        return "/login";
    }

    private string GetPageTitle()
    {
        var uri = Navigation.Uri;
        if (uri.Contains("/admin/dashboard") || uri.Contains("/chief/dashboard"))
            return "Dashboard";
        else if (uri.Contains("/admin/employees") || uri.Contains("/chief/team"))
            return "Employees";
        else if (uri.Contains("/admin/departments") || uri.Contains("/chief/my-department"))
            return "Departments";
        return "Dashboard";
    }

    public void Dispose()
    {
        if (AppState != null)
        {
            AppState.OnUserChanged -= StateHasChanged;
        }
    }
}
