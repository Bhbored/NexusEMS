@page "/chief/team"
@using NexusEMS.Shared.Models
@using NexusEMS.Web.Components.UI
@using NexusEMS.Web.Services
@using NexusEMS.Web.Tests
@inject NavigationManager Navigation
@inject AppStateService AppState

<div class="mb-6">
    <h1 class="h2 fw-bold mb-1">Team Management</h1>
    <p class="text-muted mb-0">Manage your team members and their account permissions here.</p>
</div>

<DataGrid TItem="Employee" Items="@MyTeam" Title="@($"{MyDepartmentName} Employees")"
    OnAddClick="@(() => Navigation.NavigateTo("/chief/employees/create"))" FilterStrategy="@FilterTeam">
    <HeaderContent>
        <th>Name</th>
        <th>Position</th>
        <th>Email</th>
        <th>Hire Date</th>
        <th>Status</th>
        <th class="text-end">Actions</th>
    </HeaderContent>
    <RowTemplate Context="employee">
        <td>
            <div class="d-flex align-items-center">
                <div class="employee-avatar-small employee-avatar-@GetAvatarColor(employee.Id) me-3">
                    <span class="fw-bold">@GetInitials(employee.FirstName, employee.LastName)</span>
                </div>
                <div>
                    <div class="fw-medium">@employee.FirstName @employee.LastName</div>
                </div>
            </div>
        </td>
        <td>@employee.Position</td>
        <td>@employee.Email</td>
        <td>@employee.HireDate.ToShortDateString()</td>
        <td>
            <span class="badge employee-status-badge-modern">
                @(employee.IsActive ? "Active" : "Inactive")
            </span>
        </td>
        <td class="text-end">
            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-sm employee-action-btn employee-action-edit" 
                        @onclick="() => EditEmployee(employee.Id)"
                        title="Edit Details">
                    <i class="bi bi-pencil"></i>
                </button>
                @if (employee.IsActive)
                {
                    <button class="btn btn-sm employee-action-btn employee-action-warning" 
                            @onclick="() => ToggleStatus(employee)" 
                            title="Deactivate">
                        <i class="bi bi-person-slash"></i>
                    </button>
                }
                else
                {
                    <button class="btn btn-sm employee-action-btn employee-action-success" 
                            @onclick="() => ToggleStatus(employee)" 
                            title="Activate">
                        <i class="bi bi-person-check"></i>
                    </button>
                }
            </div>
        </td>
    </RowTemplate>
</DataGrid>

@code {
    private List<Employee> MyTeam = new();
    private string MyDepartmentName = string.Empty;

    protected override void OnInitialized()
    {
        if (AppState.CurrentUser?.DepartmentId.HasValue == true)
        {
            var employees = MockEmployees.GetEmployees();
            var departments = MockDepartments.GetDepartments();

            MyTeam = employees.Where(e => e.DepartmentId == AppState.CurrentUser.DepartmentId).ToList();
            MyDepartmentName = departments.FirstOrDefault(d => d.Id == AppState.CurrentUser.DepartmentId)?.Name ?? "Unknown";
        }
    }

    private bool FilterTeam(Employee emp, string searchTerm)
    {
        if (string.IsNullOrWhiteSpace(searchTerm)) return true;
        searchTerm = searchTerm.ToLower();
        return emp.FirstName.ToLower().Contains(searchTerm) ||
        emp.LastName.ToLower().Contains(searchTerm) ||
        emp.Email.ToLower().Contains(searchTerm) ||
        emp.Position.ToLower().Contains(searchTerm);
    }

    private void EditEmployee(int id)
    {
        Navigation.NavigateTo($"/chief/employees/edit/{id}");
    }

    private void ToggleStatus(Employee emp)
    {
        emp.IsActive = !emp.IsActive;
        // Mock API call to save status
        StateHasChanged();
    }

    private string GetInitials(string? first, string? last)
    {
        return $"{(first?.FirstOrDefault())}{(last?.FirstOrDefault())}";
    }

    private string GetAvatarColor(int employeeId)
    {
        var colors = new[] { "indigo", "blue", "orange", "pink" };
        var index = (employeeId - 1) % colors.Length;
        return colors[index];
    }
}
