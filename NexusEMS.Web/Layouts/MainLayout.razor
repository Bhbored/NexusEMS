@inherits LayoutComponentBase
@using NexusEMS.Shared.Enums
@using NexusEMS.Web.Services
@using NexusEMS.Web.Components.Common
@using NexusEMS.Web.Components.Navigation
@inject IJSRuntime JSRuntime
@implements IDisposable
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (!AuthService.IsAuthenticated || AuthService.CurrentUser == null)
{
    <RedirectToLogin />
}
else
{
    <div class="d-flex" style="height: 100vh; overflow: hidden;">
        <!-- Desktop Sidebar -->
        <div class="sidebar d-none d-md-flex flex-column p-3">
            <a href="@GetDashboardUrl()" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
                <span class="fs-4 fw-bold text-primary">Nexus EMS</span>
            </a>
            <hr class="text-secondary">

            <NavMenu />

            <hr class="mt-auto text-secondary">
            <UserProfileMenu DropdownId="dropdownUser1" />
        </div>

        <!-- Mobile Offcanvas Navigation -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileNav" aria-labelledby="mobileNavLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title fw-bold text-primary" id="mobileNavLabel">Nexus EMS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <NavMenu />
                <hr class="text-secondary mx-3">
                <div class="px-3 pb-3">
                    <UserProfileMenu DropdownId="dropdownUser2" />
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column" style="overflow: hidden;">
            <TopBar PageTitle="@GetPageTitle()">
                <RightContent>
                    <ThemeToggle IsDarkMode="@isDarkMode" OnThemeChanged="@((isDark) => isDarkMode = isDark)" />
                </RightContent>
            </TopBar>

            <main class="flex-grow-1 bg-body-tertiary overflow-auto p-4 p-md-4">
                <div class="container-fluid px-0 px-md-3">
                    @Body
                </div>
            </main>
        </div>
    </div>
}

@code {
    private bool isDarkMode = false;

    protected override void OnInitialized()
    {
        if (AuthService != null)
        {
            AuthService.OnUserChanged += StateHasChanged;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && AuthService.IsAuthenticated)
        {
            isDarkMode = false;
        }
    }

    private string GetDashboardUrl()
    {
        var role = AuthService.GetUserRole();
        if (role == UserRole.Admin)
            return "/admin/dashboard";
        else if (role == UserRole.DepartmentChief)
            return "/chief/dashboard";
        return "/login";
    }

    private string GetPageTitle()
    {
        var uri = Navigation.Uri;
        if (uri.Contains("/admin/dashboard") || uri.Contains("/chief/dashboard"))
            return "Dashboard";
        else if (uri.Contains("/admin/employees") || uri.Contains("/chief/team"))
            return "Employees";
        else if (uri.Contains("/admin/departments") || uri.Contains("/chief/my-department"))
            return "Departments";
        return "Dashboard";
    }

    public void Dispose()
    {
        AuthService.OnUserChanged -= StateHasChanged;
    }
}
